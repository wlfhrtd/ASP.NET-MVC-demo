@model GuitarBrandViewModel

<h2>Select tag</h2>
@if (Model.SelectedBrand == null)
{
    <div class="alert alert-warning">
        No brand selected
    </div>
}
else
{
    <div class="alert alert-success">
        @Model.SelectedBrand.Name <text>has been selected</text>
    </div> 
}

<form asp-action="SelectTag" method="post">
    <div class="form-group">
        <label asp-for="SelectedBrandId"></label>
        <select asp-for="SelectedBrandId" asp-items="Model.Brands" class="form-control"></select>
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
</form>